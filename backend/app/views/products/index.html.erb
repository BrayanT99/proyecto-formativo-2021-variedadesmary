<h1>Productos</h1>
<hr>
 <table class="table table-dark table-striped">
   <tr>
     <thead class="table-dark">
       <th scope="col">Nombre</th>
       <th scope="col">Precio</th>
       <th scope="col">Descripcion</th>
       <th scope="col">Caracteristica</th>
       <th scope="col">Marca</th>
       <th scope="col">Tipo</th>
       <th scope="col">Descuento</th>
       <th scope="col">Referencia</th>
       <th scope="col">Fotos</th>
       <th scope="col">Accion</th>
     </thead>
   </tr>
   <% @products.each do |product| %>
   <tr>
     <td><%= product.name %></td>
     <td><%= product.price %></td>
     <td><%= product.description %></td>
     <td><%= product.characteristic %></td>
     <td><%= product.mark %></td>
     <td><%= product.kind %></td>
     <td><%= product.discount %></td>
     <td><%= product.reference %></td>
     <td><%= product.photos %></td>

     <td>
       <%= link_to "Editar", edit_product_path(product)%>
       <%= link_to "Eliminar", product, method: :delete, data: {confirm: "Desea eliminar este producto?"} %>

     </td>
   </tr>
   <% end %>
 </table>

 <%= link_to "Crear nuevo producto", new_product_path %>
