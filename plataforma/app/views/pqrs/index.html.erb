

<h1>PQR</h1>
<hr>
 <table class="table table-striped table-hover">
   <tr>
     <thead class="">
       <th scope="col">Tipo</th>
       <th scope="col">Descripcion</th>
       <th scope="col">Estado</th>
       <th scope="col">Referencia</th>
       <th scope="col">Fecha</th>
       <th scope="col">Accion</th>

     </thead>
   </tr>
   <% @pqrs.each do |pqr| %>
   <tr>
     <td><%= pqr.kind %></td>
     <td><%= pqr.description %></td>
     <td><%= pqr.state %></td>
     <td><%= pqr.reference %></td>
     <td><%= pqr.date %></td>
     <td>
       <%= link_to "Editar", edit_pqr_path(pqr)%>
       <%= link_to "Eliminar", pqr, method: :delete, data: {confirm: "Desea eliminar este proveedor?"} %>
     </td>
   </tr>
   <% end %>
 </table>
